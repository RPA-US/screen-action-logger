{
    "manifest_version": 2,
    "name": "Webgazer.js",
    "author": "Manuel Garc√≠a Romero",
    "description": "Log user gaze interaction with the screen",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "scripts": [
            "background_script.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "alarms",
        "bookmarks",
        "downloads",
        "history",
        "management",
        "notifications",
        "storage",
        "webNavigation"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_popup": "webgazerjsAction/index.html",
        "default_title": "Webgazer.js"
    }
}
